{
  "name": "sls-starter-appsync",
  "version": "1.0.0",
  "description": "DNS/CDN domains and subdomains management with GraphQL.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "eslint './**/*.{ts,tsx}' --fix",
    "lint:test": "npm run lint:fix && jest",
    "clean:build": "rimraf -f build && npm run build && npm run zip:layer",
    "validate:dev": "sls deploy --stage dev --noDeploy",
    "validate:prod": "sls deploy --stage prod --noDeploy",
    "validate:all": "npm run lint:fix && npm audit fix && npm run clean:build",
    "deploy:dev": "npm run validate:dev && npm run validate:all && sls deploy --stage dev",
    "deploy:prod": " npm run validate:prod && npm run validate:all && sls deploy --stage prod",
    "install:prod": "cp package.json ./nodejs && cd ./nodejs && npm i --only=prod",
    "prepare:layer": "rimraf -f ./nodejs dependencies.zip && mkdir -p ./nodejs && npm run install:prod",
    "zip:layer": "npm run prepare:layer && zip -qr dependencies.zip nodejs && rimraf -f ./nodejs",
    "newman:test:dev": "NODE_ENV=dev ts-node $npm_package_config_newman",
    "newman:test:prod": "NODE_ENV=prod ts-node $npm_package_config_newman",
    "ddb:install": "sls dynamodb install",
    "ddb:start": "sls dynamodb start --migrate",
    "cli:cmd": "ts-node ./src/utils/cli.entrypoint.ts"
  },
  "config": {
    "newman": "./src/__tests__/integration/newman.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/sls-starter-appsync"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "eslintIgnore": [
    "build/*",
    "node_modules/*"
  ],
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run validate:all"
    }
  },
  "dependencies": {
    "@sentry/node": "^5.15.4",
    "aws-sdk": "^2.656.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@types/aws-lambda": "^8.10.48",
    "@types/jest": "^25.2.1",
    "@types/newman": "^4.5.0",
    "@types/ora": "^3.2.0",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "aws-lambda": "^1.0.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-graphql": "^3.1.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "newman": "^5.0.0",
    "ora": "^4.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "serverless": "^1.67.3",
    "serverless-appsync-plugin": "^1.2.0",
    "serverless-pseudo-parameters": "^2.5.0",
    "serverless-webpack": "^5.3.1",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-node-externals": "^1.7.2",
    "yargs": "^15.3.1"
  }
}
