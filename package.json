{
  "name": "sls-starter-appsync",
  "version": "1.0.0",
  "description": "DNS/CDN domains and subdomains management with GraphQL.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "eslint './**/*.{ts,tsx}' --fix",
    "lint:test": "npm run lint:fix && jest",
    "layer:prepare": "rimraf -f ./nodejs dependencies.zip && npm run layer:install && npm run layer:zip",
    "layer:install": "mkdir -p ./nodejs && cp package.json ./nodejs && cd ./nodejs && npm i @sentry/node",
    "layer:zip": "zip -qr dependencies.zip nodejs && rimraf -f ./nodejs",
    "clean:build": "rimraf -f build && npm run build && npm run layer:prepare",
    "validate:sls": "sls deploy --stage dev --noDeploy",
    "validate:all": "npm run lint:test && npm run clean:build",
    "deploy:dev": "npm run validate:all && sls deploy --stage dev",
    "deploy:prod": "npm run validate:all && sls deploy --stage prod",
    "newman:dev": "ts-node ./src/utils/cli.ts newman dev",
    "newman:prod": "ts-node ./src/utils/cli.ts newman prod",
    "ddb:install": "sls dynamodb install",
    "ddb:start": "sls dynamodb start --migrate",
    "ssm:download": "ts-node ./src/utils/cli.ts ssmDownload",
    "ssm:update": "ts-node ./src/utils/cli.ts ssmUpdate",
    "ssm:delete": "ts-node ./src/utils/cli.ts ssmDelete"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/sls-starter-appsync"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@sentry/node": "^5.29.2",
    "aws-sdk": "^2.814.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@types/aws-lambda": "^8.10.66",
    "@types/jest": "^26.0.19",
    "@types/newman": "^5.1.1",
    "@types/ora": "^3.2.0",
    "@types/yargs": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "aws-lambda": "^1.0.6",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "newman": "^5.2.1",
    "ora": "^5.1.0",
    "postman-collection": "^3.6.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "serverless": "^2.16.0",
    "serverless-appsync-plugin": "^1.5.0",
    "serverless-iam-roles-per-function": "^3.0.1",
    "serverless-prune-plugin": "^1.4.3",
    "serverless-pseudo-parameters": "^2.5.0",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-node-externals": "^2.5.2",
    "yargs": "^16.2.0"
  }
}
